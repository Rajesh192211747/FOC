#include<stdio.h>
#include<conio.h>
int main()
{
	int n,i,j,a[10][10],b[10][10],c[10][10];
	printf("enter size of matrix : ");
	scanf("%d",&n);
	printf("enter array A \n");
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
		    scanf("%d",&a[i][j]);
		}
	}
	printf("A array \n");
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			printf("%d \t",a[i][j]);;
		}
		printf("\n");
   }
	printf("enter array B \n");
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
		    scanf("%d",&b[i][j]);
		}
	}
	
    printf("B array \n");
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			printf("%d \t",b[i][j]);;
		}
		printf("\n");
   }
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			c[i][j]=a[i][j]+b[i][j];
		}
   }		
	printf("sum of array \n");
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			printf("%d\t",c[i][j]);
		}	
		printf("\n");
	}
}
